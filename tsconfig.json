{
  "compilerOptions": {
    "incremental": true,                     
    "target": "es5",                         
    "module": "commonjs",                    
    "outDir": "./lib",                        
    "downlevelIteration": true,              
    "strict": true,                           
    "esModuleInterop": true,              
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true 
  },
  "include": [ "src/" ],
  "exclude": [ "examples/", "tests/", "node_modules" ]
}
